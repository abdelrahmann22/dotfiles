{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "center",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "control-center-positionX": "right",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 8,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 420,
  "control-center-height": 800,
  "notification-window-width": 450,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {},
  "notification-visibility": {},
  "widgets": [
    "title",
    "buttons-grid#toggles",
    "buttons-grid#power",
    "backlight",
    "volume",
    "notifications",
    "mpris",
    "dnd"
  ],
  "widget-config": {
    "title": {
      "text": "Quick Settings",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "buttons-grid#toggles": {
      "actions": [
        {
          "label": "󰤨",
          "type": "toggle",
          "active": true,
          "command": "networkmanager_dmenu",
          "update-command": "sh -c '[[ $(nmcli -t -f WIFI radio) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": "󰂯",
          "type": "toggle",
          "active": true,
          "command": "blueman-manager",
          "update-command": "sh -c '[[ $(bluetoothctl show | grep \"Powered: yes\") ]] && echo true || echo false'"
        },
        {
          "label": "󰀝",
          "type": "toggle",
          "active": false,
          "command": "rfkill toggle all",
          "update-command": "sh -c '[[ $(rfkill list | grep -c \"Soft blocked: yes\") -gt 0 ]] && echo true || echo false'"
        },
        {
          "label": "󰂛",
          "type": "toggle",
          "active": false,
          "command": "swaync-client -d",
          "update-command": "sh -c '[[ $(swaync-client -D) == \"true\" ]] && echo true || echo false'"
        },
        {
          "label": "󰖨",
          "type": "toggle",
          "active": false,
          "command": "sh -c 'pgrep -x gammastep && pkill gammastep || gammastep -O 4500 &'",
          "update-command": "sh -c 'pgrep -x gammastep > /dev/null && echo true || echo false'"
        }
      ]
    },
    "buttons-grid#power": {
      "actions": [
        {
          "label": "󰌾",
          "type": "normal",
          "command": "hyprlock"
        },
        {
          "label": "󰒲",
          "type": "normal",
          "command": "systemctl suspend"
        },
        {
          "label": "󰜉",
          "type": "normal",
          "command": "systemctl reboot"
        },
        {
          "label": "󰐥",
          "type": "normal",
          "command": "systemctl poweroff"
        },
        {
          "label": "󰍃",
          "type": "normal",
          "command": "hyprctl dispatch exit"
        }
      ]
    },
    "backlight": {
      "label": "󰃟",
      "device": "amdgpu_bl1",
      "min": 0
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": false,
      "show-per-app-icon": true,
      "show-per-app-label": false,
      "empty-list-label": "No audio",
      "expand-button-label": "Apps",
      "collapse-button-label": "Apps"
    },
    "mpris": {
      "image-size": 40,
      "image-radius": 8,
      "blur": true
    }
  }
}
